          {
            "group": "Examples",
            "pages": [
              "examples/overview",
              "examples/hackernews",
              "examples/substack"
            ]
          },
          {
            "group": "Using with AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          },
          {
